{
	"compilerOptions": {
		"target": "ES6",
		"allowJs": true,
		"module": "CommonJS",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		// "lib": ["ESNext"],
		// "lib": ["es2017", "dom"],
		// "lib": ["dom", "ESNext"],
		// "jsx": "react-jsx",
		"paths": {
			"*": ["node_modules/*"],
			"@src/*": ["src/*"],
			"@plugins/*": ["src/plugins/*"],
			"@themes/*": ["src/themes/*"],
			"@config/*": ["src/config/*"],
			"@utils/*": ["src/utils/*"],
			"@components/*": ["src/components/*"],
			"#types/*": ["src/types/*"]
		},
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "ESNext"],
		"typeRoots": ["./src/types"]
	},
	"include": ["src/**/*"]
}
